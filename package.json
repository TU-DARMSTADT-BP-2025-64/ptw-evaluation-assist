{
	"name": "ptw-evaluation-assist",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"prepare-smui": "npm run smui-theme-light && npm run smui-theme-dark",
		"smui-theme-light": "smui-theme compile src/theme/smui.css -i src/theme",
		"smui-theme-dark": "smui-theme compile src/theme/smui-dark.css -i src/theme/dark"
	},
	"dependencies": {
		"@smui/dialog": "^8.0.0-beta.3",
		"@smui/list": "^8.0.0-beta.3",
		"@smui/menu": "^8.0.0-beta.3",
		"@smui/select": "^8.0.0-beta.3",
		"@smui/snackbar": "^8.0.0-beta.3",
		"@smui/textfield": "^8.0.0-beta.3",
		"bcrypt": "^5.1.1",
		"better-sqlite3": "^11.6.0",
		"dotenv": "^16.4.7",
		"jsonwebtoken": "^9.0.2"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^5.0.0",
		"@material/elevation": "^14.0.0",
		"@neoconfetti/svelte": "^2.0.0",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^5.2.9",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@testing-library/svelte": "^5.2.6",
		"@types/bcrypt": "^5.0.2",
		"@types/better-sqlite3": "^7.6.12",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "^22.10.2",
		"env-paths": "^3.0.0",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"generate-password": "^1.7.1",
		"globals": "^15.0.0",
		"jsdom": "^25.0.1",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"sass": "^1.83.0",
		"smui-theme": "^8.0.0-beta.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-material-ui": "^8.0.0-beta.2",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3",
		"vitest": "^2.0.4",
		"winston": "^3.17.0"
	}
}
